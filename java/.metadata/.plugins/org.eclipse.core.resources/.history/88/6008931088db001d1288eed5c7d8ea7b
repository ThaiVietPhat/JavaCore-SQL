package ChuViVaDienTich;

import java.util.Scanner;

public class HamMain {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println("Tinh chu vi va dien tich hinh chu nhat, hay nhap do dai 2 canh cua hinh chu nhat");
		Scanner scan=new Scanner (System.in);
		float x=scan.nextFloat();
		float y=scan.nextFloat();
		HinhChuNhat.chuVi(x, y);
		HinhChuNhat.dienTich(x, y);	
		System.out.println("Tinh chu vi va dien tich hinh vuong, hay nhap do dai 1 canh hinh vuong");
		HinhVuong.chuVi(scan.nextFloat());
		HinhVuong.dienTich(scan.nextFloat());
		System.out.println("Tinh chu vi va dien tich hinh tron, nhap ban kinh hinh tron:");
		HinhTron.chuVi(SO_PI, scan.nextDouble());

	}
	public static final double SO_PI=3.14;

}

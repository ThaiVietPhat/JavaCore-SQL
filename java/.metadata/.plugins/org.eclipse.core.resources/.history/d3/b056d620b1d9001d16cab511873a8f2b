package ThucHanh;

import java.util.Scanner;

public class ChuViVaDienTich {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner scan=new Scanner(System.in);
System.out.println("Do dai canh hinh vuong la:");
int a=scan.nextInt();
System.out.println("Chu vi va dien tich cua hinh vuong la:");
System.out.println(HinhVuong.chuViHinhVuong(a));
System.out.println(HinhVuong.dienTichHinhVuong(a));

System.out.println("Chieu dai cua hinh chu nhat:");
int x=scan.nextInt();
System.out.println("Chieu rong cua hinh chu nhat:");
int y=scan.nextInt();
System.out.println("Chu vi va dien tich hinh chu nhat la:");
System.out.println(HinhChuNhat.chuViHinhChuNhat(x, y));
System.out.println(HinhChuNhat.dienTichHinhChuNhat(x, y));
System.out.println("Ban kinh cua hinh tron la:");
float soPi=3.14f;
int r=scan.nextInt();
System.out.println("Chu vi va dien tich cua hinh tron la:");
System.out.println(HinhTron.chuViHinhTron(soPi, r));
System.out.println(HinhTron.dienTichHinhTron(soPi, r));

	}

}
